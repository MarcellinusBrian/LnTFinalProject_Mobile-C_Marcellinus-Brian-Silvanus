<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pilihan_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    tools:context=".Segitiga">-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas Segitiga"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/Alas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alas"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="25dp"
        android:layout_alignBaseline="@+id/txAlas"
        android:layout_alignBottom="@+id/txAlas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/Tinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi"
        android:layout_alignBaseline="@+id/txTinggi"
        android:layout_alignStart="@+id/Alas"
        android:layout_alignLeft="@+id/Alas"
        android:layout_alignBottom="@+id/txTinggi"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark"/>

    <EditText
        android:id="@+id/txAlas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="Masukkan Alas"
        android:inputType="number"/>

    <EditText
        android:id="@+id/txTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txAlas"
        android:layout_alignLeft="@+id/txAlas"
        android:layout_alignStart="@+id/txAlas"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Masukkan Tinggi"
        android:inputType="number"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txTinggi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Hitung Luas"/>

    <TextView
        android:id="@+id/Hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:text="Luas Segitiga :"
        android:textSize="23dp"/>

</RelativeLayout>